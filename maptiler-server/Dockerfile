# ---------- production image -----------
FROM ubuntu:20.04
ARG TARGETARCH
ARG TARGETPLATFORM
ARG NODE_AUTH_TOKEN
ARG GITHUB_COMMIT_SHA
ARG GITHUB_RUN_NUMBER
ARG FTP_HOST
ARG FTP_USER
ARG FTP_PASS
ARG FTP_PATH

ENV ARCHITECTURE=${TARGETARCH//amd/x}

RUN apt -qq update --allow-releaseinfo-change

ENV WORK_DIR=/data
VOLUME /data
WORKDIR /data

EXPOSE 3650
ENTRYPOINT ["echo"]
